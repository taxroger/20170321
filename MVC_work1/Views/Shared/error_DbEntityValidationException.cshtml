@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "DbEntityValidationException";

    var ex = Model.Exception as System.Data.Entity.Validation.DbEntityValidationException;
}

<h1 class="text-danger">DB Entity Validation Exception</h1>
<h2>錯誤訊息如下:</h2>

<ul>
    @foreach (var errors in ex.EntityValidationErrors)
    {
        foreach (var err in errors.ValidationErrors)
        {
            <li>@err.PropertyName 發生錯誤:@err.ErrorMessage </li>
        }
    }
</ul>

